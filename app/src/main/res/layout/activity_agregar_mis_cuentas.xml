<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAgregarCuenta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/primary_blue"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvAgregarCuentaTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Agregar Cuenta"
        android:textSize="26sp"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarAgregarCuenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/scrollAgregarCuenta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvAgregarCuentaTitulo"
        app:layout_constraintBottom_toTopOf="@id/btnConfirmAddCuenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etNombreCuentaAdd"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:hint="Ej: Mercado Pago"/>

            <!-- Monto -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto Actual"
                android:layout_marginTop="16dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etMontoCuentaAdd"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:inputType="numberDecimal"
                android:hint="1000"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnConfirmAddCuenta"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Confirmar"
        android:textColor="@color/button_text"
        android:layout_margin="24dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
